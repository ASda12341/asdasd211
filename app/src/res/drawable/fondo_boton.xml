<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/color_primario_oscuro"
                android:endColor="@color/color_primario"
                android:angle="270" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/color_primario"
                android:endColor="@color/color_secundario"
                android:angle="270" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>