<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/color_superficie"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <TextView
            android:id="@+id/texto_pelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la película"
            android:textColor="@color/color_texto"
            android:textSize="18sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/texto_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@usuario"
            android:textColor="@color/color_acento"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
        
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_marginTop="8dp"
            style="?android:attr/ratingBarStyleSmall" />
        
        <TextView
            android:id="@+id/texto_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentario de la reseña"
            android:textColor="@color/color_texto_secundario"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end" />
        
        <TextView
            android:id="@+id/texto_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-01-01"
            android:textColor="@color/color_texto_secundario"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />
        
    </LinearLayout>
    
</androidx.cardview.widget.CardView>