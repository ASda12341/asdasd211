<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Película"
            android:textColor="@color/color_texto"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />
        
        <EditText
            android:id="@+id/campo_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/fondo_campo"
            android:textColor="@color/color_texto"
            android:layout_marginBottom="12dp" />
        
        <EditText
            android:id="@+id/campo_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Director"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/fondo_campo"
            android:textColor="@color/color_texto"
            android:layout_marginBottom="12dp" />
        
        <EditText
            android:id="@+id/campo_anio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Año"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/fondo_campo"
            android:textColor="@color/color_texto"
            android:layout_marginBottom="12dp" />
        
        <EditText
            android:id="@+id/campo_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Género"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/fondo_campo"
            android:textColor="@color/color_texto"
            android:layout_marginBottom="12dp" />
        
        <EditText
            android:id="@+id/campo_sinopsis"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Sinopsis"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@drawable/fondo_campo"
            android:textColor="@color/color_texto"
            android:layout_marginBottom="20dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <Button
                android:id="@+id/boton_cancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:background="@drawable/fondo_boton_secundario"
                android:textColor="@color/color_texto"
                android:layout_marginEnd="8dp" />
            
            <Button
                android:id="@+id/boton_actualizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actualizar"
                android:background="@drawable/fondo_boton"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
            
        </LinearLayout>
        
    </LinearLayout>
    
</ScrollView>